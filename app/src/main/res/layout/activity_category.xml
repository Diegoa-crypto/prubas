<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <include
        android:id="@id/toolbar"
        layout="@layout/app_bar_layout"/>

    <TextView
        android:layout_below="@+id/toolbar"
        android:id="@+id/slogan_category"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/agregar"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"

        />
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="90dp">

        <ImageView
            android:id="@+id/derivados"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/category_derivados"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/frutos"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/category_frutos"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/verduras"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/category_verduras"
            />

    </LinearLayout>





</RelativeLayout>