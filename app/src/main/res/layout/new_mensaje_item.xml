<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/product_image_new_mensaje"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/namedeproduct"
        android:id="@+id/nombre_producto_mensaje"
        android:layout_toRightOf="@+id/product_image_new_mensaje"
        android:layout_toEndOf="@+id/product_image_new_mensaje"
        android:layout_marginLeft="10dp"/>



</RelativeLayout>